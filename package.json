{
  "name": "livery",
  "version": "4.0.2",
  "description": "Minimal development server to watch and dispense static files.",
  "author": "Shannon Moeller <me@shannonmoeller> (https://shannonmoeller.com)",
  "repository": "shannonmoeller/livery",
  "license": "MIT",
  "keywords": [
    "cli",
    "dev",
    "live",
    "livereload",
    "lr",
    "reload",
    "server"
  ],
  "type": "module",
  "main": "index.js",
  "bin": {
    "livery": "cli.js",
    "lr": "cli.js"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "minimist": "^1.2.8",
    "send": "^1.1.0",
    "tiny-lr": "^2.0.0"
  },
  "scripts": {
    "lint": "npm run lint-eslint && npm run lint-prettier",
    "lint-eslint": "npx eslint@8 --ignore-path .gitignore --fix '**/*.js'",
    "lint-prettier": "npx prettier@3 --ignore-path .gitignore --write '**/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "engines": {
    "node": ">=12.17.0"
  }
}
